<%= form_with scope: :car, url: cars_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :type %><br>
    <%= form.text_field :type %>
  </p>

  <p>
    <%= form.label :color %><br>
    <%= form.select(:color, [['Blue', 'blue'], ['Yellow', 'yellow'],['Red', 'red']]) %>
  </p>

  <p>
   <%= form.file_field :image %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', cars_path %>
